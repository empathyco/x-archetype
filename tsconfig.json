{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.mts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
