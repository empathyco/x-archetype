{
  "name": "@empathyco/x-archetype",
  "author": "Empathy Systems Corporation S.L.",
  "version": "0.2.0",
  "license": "Apache-2.0",
  "homepage": "https://github.com/empathyco/x-archetype",
  "description": "Starting point to setup a X Components project",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open --skip-plugins eslint",
    "build": "rollup -c",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2e:ci": "vue-cli-service test:e2e --headless --browser chrome",
    "test:unit": "vue-cli-service test:unit",
    "commit": "git-cz",
    "lint": "vue-cli-service lint",
    "release": "standard-version --no-verify",
    "release:alpha": "standard-version --no-verify --prerelease alpha",
    "install:local": "npm install ../x-components/empathy-x-components-1.0.0.tgz --no-save",
    "json:csv": "json-csv ./src/i18n/messages",
    "csv:json": "csv-json ./output ./src/i18n/messages"
  },
  "dependencies": {
    "@empathy/search-adapter": "^6.1.0",
    "@empathy/search-types": "^9.0.0",
    "@empathy/x-components": "2.0.0",
    "reflect-metadata": "^0.1.13",
    "vue": "^2.6.11",
    "vue-class-component": "~7.1.0",
    "vue-i18n": "~8.21.0",
    "vue-property-decorator": "~8.3.0",
    "vue-runtime-helpers": "~1.1.2",
    "vuex": "^3.0.0"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "~5.1.1",
    "@empathybroker/deep-merge": "^1.2.1",
    "@empathy/x-translations": "^1.0.0",
    "@empathyco/eslint-plugin-x": "^1.2.0",
    "@rollup/plugin-buble": "~0.21.3",
    "@rollup/plugin-commonjs": "~14.0.0",
    "@rollup/plugin-json": "~4.1.0",
    "@rollup/plugin-node-resolve": "~8.4.0",
    "@rollup/plugin-replace": "~2.3.2",
    "@types/autoprefixer": "~9.6.1",
    "@types/jest": "~25.2.3",
    "@vue/cli-plugin-e2e-cypress": "~4.5.11",
    "@vue/cli-plugin-eslint": "~4.5.11",
    "@vue/cli-plugin-typescript": "~4.5.11",
    "@vue/cli-plugin-unit-jest": "~4.5.11",
    "@vue/cli-plugin-vuex": "~4.5.11",
    "@vue/cli-service": "~4.5.11",
    "@vue/test-utils": "~1.0.3",
    "autoprefixer": "~9.7.4",
    "commitizen": "~4.0.3",
    "cssnano": "~4.1.10",
    "cz-conventional-changelog": "~3.1.0",
    "lint-staged": "~10.0.7",
    "node-sass": "~4.14.0",
    "rollup": "~1.31.0",
    "rollup-plugin-copy": "~3.4.0",
    "rollup-plugin-delete": "~1.2.0",
    "rollup-plugin-generate-html-template": "~1.7.0",
    "rollup-plugin-postcss": "~2.0.3",
    "rollup-plugin-scss": "~2.1.0",
    "rollup-plugin-sourcemaps": "~0.5.0",
    "rollup-plugin-terser": "~6.1.0",
    "rollup-plugin-typescript2": "~0.25.3",
    "rollup-plugin-visualizer": "^4.0.4",
    "rollup-plugin-vue": "~5.1.5",
    "sass-loader": "~8.0.0",
    "typescript": "~3.9.6",
    "vue-template-compiler": "~2.6.10",
    "wrapper-webpack-plugin": "~2.1.0",
    "eslint": "7.18.0"
  },
  "prettier": "@empathyco/eslint-plugin-x/prettier-config",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./src/**/*.{vue,js,jsx,ts,tsx}": [
      "vue-cli-service lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
