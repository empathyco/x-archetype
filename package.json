{
  "name": "@empathyco/x-archetype",
  "author": "Empathy Systems Corporation S.L.",
  "version": "0.4.0",
  "license": "Apache-2.0",
  "homepage": "https://github.com/empathyco/x-archetype",
  "description": "Starting point to setup a X Components project",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open --skip-plugins eslint",
    "build": "rollup -c",
    "build:serve": "concurrently \"rollup -c -w\" \"npm run serve:dist\"",
    "serve:dist": "http-server dist -a localhost --cors",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless --browser chrome",
    "test:e2e": "start-server-and-test build:serve http://localhost:8080 cy:open",
    "test:e2e:ci": "start-server-and-test serve:dist http://localhost:8080 cy:run",
    "test": "npm run test:e2e:ci",
    "test:unit": "vue-cli-service test:unit",
    "commit": "git-cz",
    "lint": "vue-cli-service lint",
    "release": "standard-version --no-verify",
    "release:alpha": "standard-version --no-verify --prerelease alpha",
    "install:local": "npm install file:../x/packages/x-components/empathyco-x-components-3.0.0-alpha.41.tgz --no-save",
    "json:csv": "json-csv ./src/i18n/messages",
    "csv:json": "csv-json ./output ./src/i18n/messages"
  },
  "dependencies": {
    "@empathyco/x-adapter": "^7.0.0-alpha.9",
    "@empathyco/x-components": "^3.0.0-alpha.46",
    "@empathyco/x-types": "^10.0.0-alpha.14",
    "reflect-metadata": "^0.1.13",
    "tslib": "~2.3.0",
    "vue": "^2.6.0",
    "vue-class-component": "~7.1.0",
    "vue-i18n": "~8.21.0",
    "vue-property-decorator": "~8.3.0",
    "vue-runtime-helpers": "~1.1.2",
    "vuex": "^3.0.0"
  },
  "devDependencies": {
    "@cypress/browserify-preprocessor": "~3.0.2",
    "@cypress/webpack-preprocessor": "~5.1.1",
    "@empathyco/eslint-plugin-x": "^2.0.0-alpha.2",
    "@empathyco/x-deep-merge": "^1.3.0-alpha.1",
    "@empathyco/x-translations": "^1.1.0-alpha.4",
    "@rollup/plugin-buble": "~0.21.3",
    "@rollup/plugin-commonjs": "~14.0.0",
    "@rollup/plugin-json": "~4.1.0",
    "@rollup/plugin-node-resolve": "~8.4.0",
    "@rollup/plugin-replace": "~2.3.2",
    "@types/autoprefixer": "~9.6.1",
    "@types/cypress-cucumber-preprocessor": "~4.0.1",
    "@types/jest": "~25.2.3",
    "@vue/cli-plugin-eslint": "~4.5.11",
    "@vue/cli-plugin-typescript": "~4.5.11",
    "@vue/cli-plugin-unit-jest": "~4.5.11",
    "@vue/cli-plugin-vuex": "~4.5.11",
    "@vue/cli-service": "~4.5.11",
    "@vue/test-utils": "~1.0.3",
    "autoprefixer": "~9.7.4",
    "colors": "1.4.0",
    "commitizen": "~4.0.3",
    "concurrently": "~6.5.1",
    "cssnano": "~4.1.10",
    "cypress": "~8.4.0",
    "cypress-cucumber-preprocessor": "~4.3.1",
    "cz-conventional-changelog": "~3.1.0",
    "eslint": "7.18.0",
    "http-server": "^14.1.0",
    "lint-staged": "~10.0.7",
    "node-sass": "~4.14.0",
    "rollup": "~1.31.0",
    "rollup-plugin-copy": "~3.4.0",
    "rollup-plugin-delete": "~1.2.0",
    "rollup-plugin-generate-html-template": "~1.7.0",
    "rollup-plugin-sourcemaps": "~0.5.0",
    "rollup-plugin-styles": "~3.14.1",
    "rollup-plugin-terser": "~6.1.0",
    "rollup-plugin-typescript2": "~0.30.0",
    "rollup-plugin-visualizer": "^4.0.4",
    "rollup-plugin-vue": "~5.1.5",
    "sass-loader": "~8.0.0",
    "source-map-loader": "~1.1.3",
    "start-server-and-test": "~1.14.0",
    "typescript": "~4.3.5",
    "vue-template-compiler": "^2.6.0",
    "wrapper-webpack-plugin": "~2.1.0"
  },
  "prettier": "@empathyco/eslint-plugin-x/prettier-config",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./src/**/*.{vue,js,jsx,ts,tsx}": [
      "vue-cli-service lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
